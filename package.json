{
  "name": "sc_donations",
  "version": "1.0.0",
  "description": "smart contract for donations",
  "main": "index.js",
  "scripts": {
    "accounts": "npx hardhat accounts",
    "clean": "npx hardhat clean",
    "node": "npx hardhat node",
    "deploy.AcceptingDonations": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy.AcceptingDonations:rinkeby": "npx hardhat run --network rinkeby scripts/deploy.ts",
    "test": "npx hardhat test",
    "test-coverage": "npx hardhat coverage --testfiles 'test/*.ts'",
    "compile": "npx hardhat compile",
    "lint": "npx eslint '**/*.{js,ts}'",
    "lint-fix": "npx eslint '**/*.{js,ts}' --fix",
    "prettier": "npx prettier '**/*.{json,sol,md}' --check",
    "prettier-write": "npx prettier '**/*.{json,sol,md}' --write",
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "solhint-fix": "npx solhint 'contracts/**/*.sol' --fix",
    "verify:rinkeby": "npx hardhat verify --network rinkeby <YOUR_CONTRACT_ADDRESS>",
    "task_rinkby_get-donors": "npx hardhat get-donors.ts --network rinkeby"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xkxixnxgx/sc_solidity_donations.git"
  },
  "author": "Yury Bor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xkxixnxgx/sc_solidity_donations/issues"
  },
  "homepage": "https://github.com/xkxixnxgx/sc_solidity_donations#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.46",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.4",
    "hardhat": "^2.8.4",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.5.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.5"
